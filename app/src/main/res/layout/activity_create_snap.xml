<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="satyam.snap.snapchatktt.createSnapActivity" android:background="#8FFFEB3B">

    <ImageView
            android:layout_width="394dp"
            android:layout_height="592dp" app:srcCompat="@drawable/googleg_standard_color_18"
            android:id="@+id/createSnapImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.219" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/snapEditText"
            android:hint="Type a Snap" android:textColor="#8BC34A" android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="22sp" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="530dp"
            app:layout_constraintTop_toTopOf="@+id/createSnapImageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="270dp" app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintVertical_bias="0.61" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Send"
            android:layout_width="138dp"
            android:layout_height="53dp"
            android:id="@+id/sendButton"
            android:onClick="nextClicked"
            android:textColor="#00BCD4" android:textStyle="bold" android:background="#F44336" android:textSize="18sp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.516" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="180dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline11" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Choose Image"
            android:layout_width="138dp"
            android:layout_height="53dp"
            android:id="@+id/chooseImageButton"
            android:onClick="chooseImageClicked"
            android:textColor="#3F51B5" android:textStyle="bold" android:background="#8BC34A" android:textSize="18sp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline13" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.582" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="170dp" android:layout_marginTop="551dp"
            app:layout_constraintTop_toTopOf="@id/guideline11" app:layout_constraintVertical_bias="1.0"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline11"
            app:layout_constraintGuide_begin="0dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13"
            app:layout_constraintGuide_end="7dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>